---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  expandClickableArea?: boolean;
  ariaDescribedBy?: string;
}

const { href, expandClickableArea = false, ariaDescribedBy } = Astro.props;
---

<a class:list={['link', { expandClickableArea }]} href={href} aria-describedby={ariaDescribedBy}>
  <slot />
  <Icon class="icon" name="icon-arrow-right" title="" width={22} height={22} />
</a>

<style>
  .link {
    display: inline-flex;
    gap: var(--size-spacing-xxs);
    align-items: center;
    font-weight: bold;
  }

  .link.expandClickableArea::before {
    position: absolute;
    inset: 0;
    content: '';
  }

  .link.expandClickableArea:active::before {
    background-color: rgba(0, 0, 0, 0.15);
  }

  .icon {
    position: relative;
    top: 0.125em;
  }
</style>
